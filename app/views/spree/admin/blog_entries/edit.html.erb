<% content_for :page_title do %>
   <%= link_to Spree.t(:blog_entries), admin_blog_entries_path %> / <%= @blog_entry.title.titleize.truncate(30) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_blog_entry), new_object_url, { class: "btn-success", icon: 'add', id: 'admin_new_blog_entry' } %>
<% end %>

<%= render "spree/shared/error_messages", :target => @blog_entry %>

<%= form_for [:admin, @blog_entry] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => f %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
